{
  "extends": [
    "eslint:recommended",
    "plugin:import/errors",
    "plugin:jsx-a11y/recommended",
    "prettier",
    "prettier/react"
  ],

  "rules": {
    "react/prop-types": "off",
    "no-console": "warn",
    "no-unused-vars": "warn"
  },

  "plugins": ["import", "jsx-a11y"],

  "parserOptions": {
    "ecmaVersion": 2018,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },

  "env": {
    "es6": true,
    "browser": true,
    "node": true
  },

  "settings": {
    "react": {
      "version": "detect"
    }
  }
}

